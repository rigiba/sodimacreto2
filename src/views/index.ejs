<%- include ('partials/_header') %>


<div class="container">
    <h1>Proveedores</h1>
    <div class="row">

        <pre>
            <!-- <%- tasks %> -->
        </pre>


        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action='/add' method="POST">
                        <div class="form-group mb-2">
                            <input type="text" name="title" class="form-control" placeholder="Ingresa id proveedor"></>
                        </div>
                        <div class="form-group mb-2">
                            <textarea type="text" cols="80" name="description" class="form-control" placeholder="Ingresa nit proveedor"></textarea>
                        </div>
                        <!-- <div class="form-group mb-2">
                            <input type="text" cols="80" name="status" class="form-control" placeholder="Ingresa estado"></>
                        </div> -->
                        <button type="submit" class="btn btn-outline-primary btn-block">Agregar</button>
                        <button type="reset" class="btn btn-outline-primary">Limpiar</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- listado -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nro.</th>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < tasks.length; i++) { %>
                        <tr>
                            <td><%= i +1 %></td>
                            <td><%= tasks[i].title%></td>
                            <td><%= tasks[i].description%></td>
                            <td>
                                <a href="/done/<%= tasks[i]._id%>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">Hecho</a>
                                <a href="/delete/<%= tasks[i]._id%>" class="btn btn-danger">-</a>
                                <a href="" class="btn btn-primary">+</a>
                                <a href="/edit/<%= tasks[i]._id%>" class="btn btn-warning">editar</a>
                            </td>
                        </tr>
                        <% }; %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>